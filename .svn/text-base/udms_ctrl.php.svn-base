<?php

require_once 'conexion.php';
require_once 'sql_util.php';

$pdo = getPdo();
if (isset($_GET['ftype'])) {
	if ($_GET['ftype'] == 'select') {
		if (isset($_GET['id'])) {
			$q = query('udms', '*', 'all', array(array('id', '=')));
			$ps = $pdo->prepare($q);
			$ps->bindParam(1, $_GET['id']);
			$ps->execute();
			$rows = $ps->fetch(PDO::FETCH_ASSOC);
		} else {
			$q = query('udms');
			$ps = $pdo->prepare($q);
			$ps->execute();
			$rows = $ps->fetchAll(PDO::FETCH_ASSOC);
		}
		error_log('Query select done: ' . $q);
		header('Content-Type: text/javascript');
		echo json_encode($rows);
	} else if ($_GET['ftype'] == 'xselect') {
		$xq = str_query('udms', split(',', $_GET['fields']), split(',', $_GET['fsrt']));
		$ps = $pdo->prepare($xq);
		$ps->execute();
		$rows = $ps->fetchAll(PDO::FETCH_ASSOC);
		header('Content-Type: text/javascript');
		echo json_encode($rows);
	}
} else {
	if (isset($_POST['ftype'])) {
		if ($_POST['ftype'] == 'update') {
			$sets = split(',', $_POST['update']);
			$whs = split(',', $_POST['where']);
			$q = update('udms', $sets, build_wheres($whs));
			$ps = $pdo->prepare($q);
			xBind($ps, $_POST, $sets, 'none', $whs);
			$ps->execute();
		} else if ($_POST['ftype'] == 'insert') {
			$ins = split(',', $_POST['insert']);
			$q = insert('udms', $ins);
			$ps = $pdo->prepare($q);
			sBind($ps, $_POST, $ins);
			$ps->execute();
		} else if ($_POST['ftype'] == 'delete') {
			$fds = split(',', $_POST['update']);
			$whs = split(',', $_POST['where']);
			$q = delete('udms', $fds, build_wheres($whs));
			$ps = $pdo->prepare($q);
			sBind($ps, $_POST, $whs);
			$ps->execute();
		}
		header('Content-Type: text/javascript');
		echo(json_encode('Ok'));
	} else {
		$error = array('error' => 'Error', 'message' => 'Bad request');
		header('Content-Type: text/javascript');
		echo json_encode($error);
	}
}
?>
