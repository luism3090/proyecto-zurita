			function showTipo(){
				var cfg = {
					ftype: 'xselect',
					fields: 'id,nombre',
					fsrt: '1'
				};
				$.getJSON('otipos_ctrl.php', cfg, function(json){
					var $dlg = $('#frm_tipo');
					var $fs = $dlg.find('#filas');
					var $f = $dlg.find('#fila').remove();
					$.each(json, function(idx, val){
						var $fc = $f.clone();
						$fc.children().each(function(idx){
							if(!$(this).hasClass('no')){
								var pos = $(this).text();
								if (val[pos]) {
									$(this).text(val[pos]);
								}
							}
						});
						$fc.find('#btn_ok').attr('onclick', 'setTipo('+val.id+',\''+val.strid+'\')');
						$fs.append($fc);
					});
					$dlg.modal('show');
				});
			}

			function setTipo(id, str){
				$('#tipo').val(id);
				$('#tipo_str').val(str);
				$('#frm_tipo').modal('hide');
			}

